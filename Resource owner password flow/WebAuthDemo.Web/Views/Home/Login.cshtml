
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
<div class="container">
    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
    {
        <div>
            <label>Username</label>
            @Html.TextBox("username")
        </div>

        <div>
            <label>Password</label>
            @Html.TextBox("password")
        </div>

        <div>
            <button type="submit">Login</button>
        </div>
    }
</div>